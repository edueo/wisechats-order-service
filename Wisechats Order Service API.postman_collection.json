	"item": [
		{
			"name": "001.  Get Auth Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let jsonData = pm.response.json();",
							"pm.environment.set(\"access_token\", jsonData.access_token);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"grant_type\": \"client_credentials\",\n    \"client_id\": \"{{client_id}}\",\n    \"client_secret\": \"{{client_secret}}\",\n    \"scope\": \"orders:create orders:read orders:delete orders:update\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{service_url}}/oauth/token",
					"host": [
						"{{service_url}}"
					],
					"path": [
						"oauth",
						"token"
					]
				},
				"description": "Obtem token para efetuar as requisições"
			},
			"response": []
		},
		{
			"name": "002. Create Order",
			"request": {
				"auth": {
					"type": "bearer",
